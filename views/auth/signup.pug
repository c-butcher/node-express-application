extends ../layout

block content
    div(class="col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-sm-12 text-center")
        form(class="form px-3 py-4 m-3 border shadow-sm rounded-lg" method="POST")
            h3(class="mb-3 font-weight-normal") Registration

            label(for="username" class="sr-only") Username
            input(type="email" id="username" class="form-control mb-3" name="username" placeholder="Username" required="" autofocus="")

            label(for="email" class="sr-only") Email address
            input(type="email" id="email" class="form-control mb-3" name="email" placeholder="Email address" required="" autofocus="")

            label(for="password" class="sr-only") Password
            input(type="password" id="password" class="form-control mb-3" name="password" placeholder="Password" required="")

            label(for="confirm" class="sr-only") Password
            input(type="password" id="confirm" class="form-control mb-3" name="confirm" placeholder="Confirm Password" required="")

            button(class="btn btn-lg btn-primary btn-block" type="submit") Sign Up